<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"

        android:layout_gravity="bottom"
        app:cardCornerRadius="20sp"
        android:layout_marginBottom="70sp"
        android:layout_width="match_parent"
        android:layout_marginTop="200sp"
        android:layout_height="150sp">
        <LinearLayout

            android:layout_width="match_parent"
            android:id="@+id/button_form"
            android:gravity="center|top"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Balance"
                android:id="@+id/Select_image_Form"
                android:textColor="@color/mycolorback"
                android:textStyle="bold"
                android:fontFamily="@font/baloo_paaji"
                android:layout_marginTop="15sp"
                />




            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_paaji"
                android:paddingStart="10sp"
                android:textColor="@color/white"
                android:id="@+id/bal_add_dialog_edittext"
          android:layout_marginTop="5sp"
                android:inputType="number"
                android:backgroundTint="@color/mycolorback"




                android:textColorHint="@color/white"
                android:layout_height="40sp"

                android:background="@drawable/border_back"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                />

          <LinearLayout
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content">
              <LinearLayout

                  android:background="@drawable/border_back"

                  android:gravity="center"

                  android:layout_width="100sp"
                  android:layout_height="40sp">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Cancel"
                      android:fontFamily="@font/baloo_paaji"
                      android:textColor="@color/mycolorback"
                      />
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:src="@drawable/ic_baseline_cancel_24"
                      android:layout_marginLeft="10dp"
                      android:tint="@color/mycolorback"
                      />



              </LinearLayout>
              <LinearLayout
                  android:id="@+id/linear_add_exp_dialog_button_bal"


                  android:background="@drawable/border_back"

                  android:gravity="center"

                  android:layout_width="100sp"
                  android:layout_height="40sp">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Submit"
                      android:fontFamily="@font/baloo_paaji"
                      android:textColor="@color/mycolorback"
                      />

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_marginLeft="10dp"
                      android:src="@drawable/ic_baseline_check_circle_24"
                      android:tint="@color/mycolorback" />



              </LinearLayout>


          </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>