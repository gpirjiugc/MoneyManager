<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"

        app:cardCornerRadius="15sp"


        android:layout_width="match_parent"
       android:layout_marginTop="10sp"
        android:layout_height="460sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15sp"
            android:id="@+id/button_form"
            android:gravity="center|top"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Expenses"
                android:id="@+id/Select_image_Form"
                android:textColor="@color/mycolorback"
                android:textStyle="bold"
                android:fontFamily="@font/baloo_paaji"
                android:layout_marginTop="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses Name "
                 android:layout_marginTop="10sp"
                android:fontFamily="@font/baloo_paaji"
                android:textColor="@color/mycolorback"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"
                />
            <EditText
                  android:layout_marginTop="5sp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:fontFamily="@font/averia_gruesa_libre"
                android:paddingStart="10sp"
                android:id="@+id/name_exp"

                android:textColor="@color/white"
                android:hint="Name"

                android:textColorHint="@color/white"
                android:layout_height="40sp"
                android:backgroundTint="@color/mycolorback"
                android:background="@drawable/back_edit"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:layout_marginLeft="20sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/baloo_paaji"
                android:text="Description"
                android:textColor="@color/mycolorback" />
            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/averia_gruesa_libre"
                android:paddingStart="10sp"
                android:textColor="@color/white"

                android:id="@+id/dis_exp"
           android:layout_marginTop="5sp"

                android:hint="Description"
                android:textColorHint="@color/white"
                android:layout_height="40sp"
                android:backgroundTint="@color/mycolorback"
                android:background="@drawable/back_edit"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                />

            <TextView
                android:layout_marginTop="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Amount Spend "

                android:fontFamily="@font/baloo_paaji"
                android:textColor="@color/mycolorback"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/averia_gruesa_libre"
                android:paddingStart="10sp"
                android:textColor="@color/white"
                android:id="@+id/amount_expt"
          android:layout_marginTop="5sp"
                android:inputType="number"
                android:hint="Inr"


                android:textColorHint="@color/white"
                android:layout_height="40sp"
                android:backgroundTint="@color/mycolorback"
                android:background="@drawable/back_edit"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                />
            <TextView
                android:layout_marginTop="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Tag OF Expenses"

                android:fontFamily="@font/baloo_paaji"
                android:textColor="@color/mycolorback"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_paaji"
                android:paddingStart="10sp"

                android:textColor="@color/white"
                android:id="@+id/spinner"
                android:textSize="15sp"
                android:layout_marginTop="5sp"
                android:textColorHint="@color/white"
                android:layout_height="40sp"
                android:backgroundTint="@color/mycolorback"
                android:background="@drawable/back_edit"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:background="@drawable/border_back"

                    android:gravity="center"

                    android:layout_width="100sp"
                    android:layout_height="40sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:fontFamily="@font/baloo_paaji"
                        android:textColor="@color/mycolorback"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_cancel_24"
                        android:layout_marginLeft="10dp"
                        android:tint="@color/mycolorback"
                        />



                </LinearLayout>
                <LinearLayout

                    android:background="@drawable/border_back"

                    android:gravity="center"

                    android:layout_width="100sp"
                    android:id="@+id/linear_add_exp_dialog_button"
                    android:layout_height="40sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:fontFamily="@font/baloo_paaji"
                        android:textColor="@color/mycolorback"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_baseline_check_circle_24"
                        android:tint="@color/mycolorback" />



                </LinearLayout>


            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>