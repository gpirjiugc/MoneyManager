<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.frag_expenses">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/mycolorback"
       android:orientation="vertical"
        android:layout_height="100sp">
        <TextView
            android:backgroundTint="@color/mycolorback"
           android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averia_gruesa_libre"
            android:text="Expenses Manager"

            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            >




            <ImageView
                android:id="@+id/image_home_profile"
                android:layout_width="80sp"
                android:padding="5sp"
                android:layout_height="60sp"
                android:src="@drawable/icon_profile_11"


                />



<FrameLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="10sp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView

        android:backgroundTint="@color/mycolorback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/averia_gruesa_libre"
        android:text="Girijesh Paliwal"

        android:textColor="@color/white"
        android:textSize="20sp"
/>
    <TextView
   android:layout_marginTop="25sp"
        android:backgroundTint="@color/mycolorback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/averia_gruesa_libre"
        android:text="Android Developer"
        android:textColor="@color/white"
        />

    <TextView

        android:layout_marginTop="40sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:textStyle="bold"

        android:id="@+id/total_balance_"
        android:fontFamily="@font/averia_gruesa_libre"
        android:textColor="#5BF44A"
        />
</FrameLayout>





        </LinearLayout>


    </LinearLayout>
    <me.ibrahimsn.lib.SmoothBottomBar

        android:layout_marginTop="110sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:id="@+id/bottomBar_exp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_marginBottom="10sp"
        app:cornerRadius="10sp"
        android:layout_height="50sp"
        app:backgroundColor="@color/mycolorback"
        app:menu="@menu/menu_top_bar_exp"/>
   <FrameLayout
      android:id="@+id/fm_exp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <FrameLayout
           android:id="@+id/fm_internal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <androidx.cardview.widget.CardView
               android:layout_width="60sp"
               android:layout_height="60sp"
               android:id="@+id/card_add_expenses"
               android:layout_gravity="bottom|end"
               android:layout_marginRight="20sp"
               android:layout_marginBottom="120sp"

               app:cardCornerRadius="50sp"
               app:cardBackgroundColor="@color/mycolorback"
               >
               <ImageView
                   android:layout_width="match_parent"
                   android:padding="10sp"
                   android:layout_height="match_parent"
                   android:src="@drawable/ic_baseline_add_24"
                   />

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="200sp"
               android:layout_marginTop="175sp"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="20sp"
               android:elevation="20sp"
                app:cardElevation="20sp"
               android:layout_marginLeft="20sp"
               android:layout_marginRight="30sp"

               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"

                   android:orientation="vertical"

                   >



                      <TextView
                          android:layout_marginLeft="10sp"
                          android:layout_marginTop="10sp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="  Today Report"
                          android:textColor="#7E7B7B"

                          android:fontFamily="@font/baloo_paaji"
                          android:textSize="18sp"
                          />
                     <LinearLayout
                         android:padding="10sp"
                         android:gravity="center"


                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                         <FrameLayout
                             android:layout_width="00dp"
                             android:id="@+id/frame_linear_chart"

                             android:layout_height="150sp">
                             <org.eazegraph.lib.charts.PieChart
                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                 android:id="@+id/piechart"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:padding="10sp"
                                 />
                             <TextView

                                 android:layout_width="50sp"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                 android:fontFamily="@font/arapey"
                                 android:textStyle="bold"
                                 android:gravity="center"

                    android:id="@+id/total_spend"

                                 android:textColor="@color/black"
                                 />
                         </FrameLayout>
                         <LinearLayout
                             android:layout_width="00dp"
                             android:orientation="vertical"
                             android:layout_marginLeft="10sp"
                             android:id="@+id/linear_types_exp"
                             android:layout_gravity="center"
                             android:gravity="center"
                             android:padding="20sp"
                             android:layout_height="match_parent">
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:gravity="center_vertical"
                                 android:layout_marginTop="5sp"

                                 android:layout_height="wrap_content">
                                 <androidx.cardview.widget.CardView
                                     android:layout_width="15sp"
                                     android:layout_height="15sp"
                                     app:cardBackgroundColor="#3C99EA"
                                     app:cardCornerRadius="5sp"
                                     />
                                 <TextView
                                     android:layout_marginLeft="10sp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Shopping"
                                     android:textColor="@color/black"
                                     android:textSize="12sp"
                                     android:fontFamily="@font/averia_gruesa_libre"
                                     />
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:gravity="center_vertical"
                                 android:layout_marginTop="5sp"

                                 android:layout_height="wrap_content">
                                 <androidx.cardview.widget.CardView
                                     android:layout_width="15sp"
                                     android:layout_height="15sp"
                                     app:cardBackgroundColor="#24E40F"
                                     app:cardCornerRadius="5sp"
                                     />
                                 <TextView
                                     android:layout_marginLeft="10sp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Homes"
                                     android:textColor="@color/black"
                                     android:textSize="12sp"
                                     android:fontFamily="@font/averia_gruesa_libre"
                                     />
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:gravity="center_vertical"
                                 android:layout_marginTop="5sp"

                                 android:layout_height="wrap_content">
                                 <androidx.cardview.widget.CardView
                                     android:layout_width="15sp"
                                     android:layout_height="15sp"
                                     app:cardBackgroundColor="#FA3A3A"
                                     app:cardCornerRadius="5sp"
                                     />
                                 <TextView
                                     android:layout_marginLeft="10sp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Medicine"
                                     android:textColor="@color/black"
                                     android:textSize="12sp"
                                     android:fontFamily="@font/averia_gruesa_libre"
                                     />
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:gravity="center_vertical"
                                 android:layout_marginTop="5sp"

                                 android:layout_height="wrap_content">
                                 <androidx.cardview.widget.CardView
                                     android:layout_width="15sp"
                                     android:layout_height="15sp"
                                     app:cardBackgroundColor="#EF711C"
                                     app:cardCornerRadius="5sp"
                                     />
                                 <TextView
                                     android:layout_marginLeft="10sp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Restaurant"
                                     android:textColor="@color/black"
                                     android:textSize="12sp"
                                     android:fontFamily="@font/averia_gruesa_libre"
                                     />
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:gravity="center_vertical"
                                 android:layout_marginTop="5sp"

                                 android:layout_height="wrap_content">
                                 <androidx.cardview.widget.CardView
                                     android:layout_width="15sp"
                                     android:layout_height="15sp"
                                     app:cardBackgroundColor="#701640"
                                     app:cardCornerRadius="5sp"
                                     />
                                 <TextView
                                     android:layout_marginLeft="10sp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Education"
                                     android:textColor="@color/black"
                                     android:textSize="12sp"
                                     android:fontFamily="@font/averia_gruesa_libre"
                                     />
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:gravity="center_vertical"
                                 android:layout_marginTop="5sp"

                                 android:layout_height="wrap_content">
                                 <androidx.cardview.widget.CardView
                                     android:layout_width="15sp"
                                     android:layout_height="15sp"
                                     app:cardBackgroundColor="#888888"
                                     app:cardCornerRadius="5sp"
                                     />
                                 <TextView
                                     android:layout_marginLeft="10sp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Other"
                                     android:textColor="@color/black"
                                     android:textSize="12sp"
                                     android:fontFamily="@font/averia_gruesa_libre"
                                     />
                             </LinearLayout>


                         </LinearLayout>
                     </LinearLayout>


               </LinearLayout>




           </androidx.cardview.widget.CardView>
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_marginTop="400sp"
               android:id="@+id/rv_exp"
               android:layout_marginLeft="20sp"
               android:layout_marginRight="20sp"
               android:layout_height="match_parent"
               />
           <FrameLayout
               android:layout_width="match_parent"
               android:background="@color/mycolorback"
               android:layout_gravity="bottom"
               android:orientation="vertical"
               android:visibility="invisible"
               android:layout_height="60sp">


               <LinearLayout
                   android:layout_marginLeft="10sp"

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="15sp"

                       android:fontFamily="@font/averia_gruesa_libre"
                       android:text="Most UseFull Category"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:id="@+id/most_spend_cat"
                       android:textSize="12sp"
                       android:textColor="#5E5A5A"
                       android:fontFamily="@font/averia_gruesa_libre"

                       />
               </LinearLayout>


           </FrameLayout>
       </FrameLayout>
   </FrameLayout>



</FrameLayout>

