<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp">
  <FrameLayout
      android:layout_width="match_parent"

      android:layout_gravity="center"
      android:background="@drawable/border_back1"
      android:backgroundTint="@color/mycolorback"
      android:layout_marginLeft="10dp"
    android:layout_marginRight="10sp"
      android:layout_height="90dp"
      >
      <LinearLayout
          android:layout_width="match_parent"
               android:gravity="center|top"
          android:layout_height="wrap_content">
          <TextView

              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/baloo_paaji"
              android:text="Amount Expend : "
              android:textSize="18dp"


              android:layout_marginTop="10dp"

              android:textColor="#0C1440"

              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/baloo_paaji"
              android:text="18,000"
              android:id="@+id/text_amount_anay"

              android:layout_marginTop="10dp"
              android:textSize="20dp"
              android:textColor="@color/white"
              android:layout_gravity="center|top"

              />
      </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/baloo_paaji"
          android:id="@+id/text_date_instance_anay"
          android:text="18-Jan-2022"
          android:textSize="16dp"
          android:textColor="@color/white"
          android:layout_marginBottom="15dp"
          android:layout_gravity="bottom|center"
          />


  </FrameLayout>
</LinearLayout>